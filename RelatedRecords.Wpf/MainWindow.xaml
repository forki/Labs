                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Command="{Binding RefreshCommand}" Visibility="{Binding HiddenQueriesVisibility}">
                        <Button.RenderTransform>
                            <SkewTransform />
                        </Button.RenderTransform>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF262626"/>
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                <Setter Property="Height" Value="48"/>
                                <Setter Property="Width" Value="48"/>
                                <Setter Property="Margin" Value="0,10,0,0"/>
                                <Setter Property="Padding" Value="3"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Opacity" Value="0.995"/>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFA3AEB9" Offset="0"/>
                                            <GradientStop Color="#FF8399A9" Offset="0.375"/>
                                            <GradientStop Color="#FF718597" Offset="0.375"/>
                                            <GradientStop Color="#FF617584" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Normal"/>
                                                        <VisualState x:Name="MouseOver">
                                                            <Storyboard>
                                                                <ColorAnimation Duration="0" To="#FF4472A2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="path" />
                                                            </Storyboard>
                                                        </VisualState>
                                                        <VisualState x:Name="Pressed"/>
                                                        <VisualState x:Name="Disabled"/>
                                                    </VisualStateGroup>
                                                    <VisualStateGroup x:Name="FocusStates">
                                                        <VisualState x:Name="Focused"/>
                                                        <VisualState x:Name="Unfocused"/>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                                <Path x:Name="path" Data="M44.817715,32.701C44.817715,36.424438 43.317719,39.769474 40.880226,42.212898 38.434834,44.649822 35.091141,46.147739 31.369753,46.150341 27.679762,46.150341 24.35157,44.671223 21.919287,42.2715L26.742264,37.44965 13.336,37.44965 13.336,50.854187 17.786488,46.404942C21.270859,49.861279 26.078165,52 31.369753,52 42.028622,51.998199 50.661396,43.359409 50.663998,32.701z M32.635052,12C21.97893,12.002014,13.341001,20.637493,13.341001,31.295L19.187323,31.295C19.189894,27.57238 20.68988,24.227364 23.127359,21.784601 25.567509,19.347088 28.913782,17.849091 32.635052,17.84647 36.379917,17.84647 39.757488,19.373089 42.197472,21.83989L37.58041,26.455275 50.660995,26.455275 50.660995,13.373056 46.330338,17.702539C42.838165,14.183121,37.989204,12,32.635052,12z M32,0C49.6744,0 64,14.3269 64,32 64,49.673199 49.6744,64 32,64 14.3281,64 0,49.673199 0,32 0,14.3269 14.3281,0 32,0z" Stretch="Uniform" Fill="#FF87BDDD" Width="42" Height="42" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Fluent:RibbonGroupBox>

                <!--Gallery with all tables-->
                <Fluent:RibbonGroupBox Header="Datasets" Name="P" Visibility="{Binding DatasetsVisibility}" >
                    <Fluent:InRibbonGallery ItemWidth="100" ItemHeight="56" ResizeMode="Both"
                                      MinItemsInRow="2" MaxItemsInRow="4"                             
                                      ItemsSource="{Binding SelectedConfiguration.Dataset}"
                                      SelectedItem="{Binding Mode=TwoWay, Path=SelectedDataset}">
                        <Fluent:InRibbonGallery.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding name}" FontWeight="Bold" />
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Tables " VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        <TextBlock Text="{Binding Table.Count}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </Fluent:InRibbonGallery.ItemTemplate>
                    </Fluent:InRibbonGallery>
                    <Button Command="{Binding SetTableRelationshipsCommand}">
                        <Button.RenderTransform>
                            <SkewTransform />
                        </Button.RenderTransform>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF1F3B53"/>
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                <Setter Property="Height" Value="48"/>
                                <Setter Property="Width" Value="48"/>
                                <Setter Property="Margin" Value="0,10,0,0"/>
                                <Setter Property="Padding" Value="3"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Opacity" Value="0.995"/>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFA3AEB9" Offset="0"/>
                                            <GradientStop Color="#FF8399A9" Offset="0.375"/>
                                            <GradientStop Color="#FF718597" Offset="0.375"/>
                                            <GradientStop Color="#FF617584" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Normal"/>
                                                        <VisualState x:Name="MouseOver">
                                                            <Storyboard>
                                                                <ColorAnimation Duration="0" To="#FF4472A2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="path" />
                                                            </Storyboard>
                                                        </VisualState>
                                                        <VisualState x:Name="Pressed"/>
                                                        <VisualState x:Name="Disabled"/>
                                                    </VisualStateGroup>
                                                    <VisualStateGroup x:Name="FocusStates">
                                                        <VisualState x:Name="Focused"/>
                                                        <VisualState x:Name="Unfocused"/>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                                <Path x:Name="path" Data="M342.522,146.43L342.522,343.653 145.298,343.653 145.298,437.611 342.522,437.611 342.522,634.834 436.478,634.834 436.478,437.611 633.701,437.611 633.701,343.653 436.478,343.653 436.478,146.43z M389.517,0C604.233,0 779,174.729 779,389.517 779,604.27 604.233,779 389.517,779 174.693,779 0,604.27 0,389.517 0,174.729 174.693,0 389.517,0z" Stretch="Uniform" Fill="#FF599737" Width="26" Height="26" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Tables" Name="Q" Visibility="{Binding TablesVisibility}" >
                    <Fluent:InRibbonGallery ItemWidth="120" ItemHeight="56" ResizeMode="Both"
                                      MinItemsInRow="1" MaxItemsInRow="2"                             
                                      ItemsSource="{Binding SelectedDataset.Table}"
                                      SelectedItem="{Binding Mode=TwoWay, Path=SelectedTable}">
                        <Fluent:InRibbonGallery.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding name}" FontWeight="Bold" />
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Columns " VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        <TextBlock Text="{Binding Column.Count}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </Fluent:InRibbonGallery.ItemTemplate>
                    </Fluent:InRibbonGallery>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Queries" Name="R" Visibility="{Binding QueriesVisibility}" >
                    <Fluent:InRibbonGallery ItemWidth="120" ItemHeight="56" ResizeMode="Both"
                                      MinItemsInRow="1" MaxItemsInRow="2"                             
                                      ItemsSource="{Binding SelectedDataset.Query}"
                                      SelectedItem="{Binding Mode=TwoWay, Path=SelectedQuery}">
                        <Fluent:InRibbonGallery.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding name}" FontWeight="Bold" />
                                    <StackPanel Orientation="Horizontal">
                                        <Label Content="Parameters " VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        <TextBlock Text="{Binding Parameter.Count}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </Fluent:InRibbonGallery.ItemTemplate>
                    </Fluent:InRibbonGallery>
                    <Button Command="{Binding AddQueryCommand}">
                        <Button.RenderTransform>
                            <SkewTransform />
                        </Button.RenderTransform>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FF1F3B53"/>
                                <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                <Setter Property="Height" Value="48"/>
                                <Setter Property="Width" Value="48"/>
                                <Setter Property="Margin" Value="0,10,0,0"/>
                                <Setter Property="Padding" Value="3"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Opacity" Value="0.995"/>
                                <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                <Setter Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FFA3AEB9" Offset="0"/>
                                            <GradientStop Color="#FF8399A9" Offset="0.375"/>
                                            <GradientStop Color="#FF718597" Offset="0.375"/>
                                            <GradientStop Color="#FF617584" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Normal"/>
                                                        <VisualState x:Name="MouseOver">
                                                            <Storyboard>
                                                                <ColorAnimation Duration="0" To="#FF4472A2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="path" />
                                                            </Storyboard>
                                                        </VisualState>
                                                        <VisualState x:Name="Pressed"/>
                                                        <VisualState x:Name="Disabled"/>
                                                    </VisualStateGroup>
                                                    <VisualStateGroup x:Name="FocusStates">
                                                        <VisualState x:Name="Focused"/>
                                                        <VisualState x:Name="Unfocused"/>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                                <Path x:Name="path" Data="M342.522,146.43L342.522,343.653 145.298,343.653 145.298,437.611 342.522,437.611 342.522,634.834 436.478,634.834 436.478,437.611 633.701,437.611 633.701,343.653 436.478,343.653 436.478,146.43z M389.517,0C604.233,0 779,174.729 779,389.517 779,604.27 604.233,779 389.517,779 174.693,779 0,604.27 0,389.517 0,174.729 174.693,0 389.517,0z" Stretch="Uniform" Fill="#FF599737" Width="26" Height="26" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="View" Name="V">
                    <Fluent:Button Header="Datasets" Visibility="{Binding HiddenDatasetsVisibility}" Command="{Binding ViewDatasetsCommand}" LargeIcon="Images\tables-relation.png"/>
                    <Fluent:Button Header="Tables" Visibility="{Binding HiddenTablesVisibility}" Command="{Binding ViewTablesCommand}" LargeIcon="Images\table.png"/>
                    <Fluent:Button Header="Queries" Visibility="{Binding HiddenQueriesVisibility}" Command="{Binding ViewQueriesCommand}" LargeIcon="Images\Query.png"/>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Search/Filters">
                    <Fluent:DropDownButton SizeDefinition="Middle" Header="Column">
                        <Fluent:DropDownButton.Icon>
                            <Grid Width="12" Height="12">
                                <Image Source="Images\key-solid.png"/>
                            </Grid>
                        </Fluent:DropDownButton.Icon>

                        <Fluent:Gallery MaxItemsInRow="1" MinItemsInRow="1" ItemWidth="100"
                                        SelectedItem="{Binding Mode=TwoWay, Path=SelectedColumn}" SelectedValue="{Binding Mode=TwoWay, Path=SelectedColumn}"
                                        ItemsSource="{Binding SelectedDataTableColumns}">
                            <Fluent:Gallery.ItemTemplate>
                                <DataTemplate>
                                    <Border>
                                        <StackPanel HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Mode=OneWay, Path=name}" FontSize="10" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </Fluent:Gallery.ItemTemplate>
                        </Fluent:Gallery>
                        <Fluent:MenuItem Header="Search" Command="{Binding SearchCommand}" Icon="Images\Find.png"/>
                    </Fluent:DropDownButton>

                    <Fluent:DropDownButton Name="operator" SizeDefinition="Middle" Header="Operator" >
                        <Fluent:DropDownButton.Icon>
                            <Grid Width="12" Height="12">
                                <Image Source="Images\sum.png"/>
                            </Grid>
                        </Fluent:DropDownButton.Icon>

                        <Fluent:Gallery MaxItemsInRow="1" MinItemsInRow="1" ItemWidth="100" 
                                        SelectedItem="{Binding Mode=TwoWay, Path=SelectedOperator}" SelectedValue="{Binding Mode=TwoWay, Path=SelectedOperator}"
                                        ItemsSource="{Binding SelectedColumnOperators}"/>
                    </Fluent:DropDownButton>

                    <Fluent:TextBox Name="searchFilterCriteria" Width="140"
                                    Text="{Binding Mode=TwoWay, Path=SearchCriteria, UpdateSourceTrigger=PropertyChanged}" />

                    <Fluent:Button Header="Search" Command="{Binding SearchCommand}" Icon="Images\Find.png" LargeIcon="Images\Find.png"/>
                    <Fluent:Button Header="Copy" Command="{Binding CopyCommand}" Icon="Images\Copy.png" LargeIcon="Images\Copy.png" ToolTip="{Binding  Mode =OneWay, Path=ClipboardText}"/>

                    <Fluent:DropDownButton Name="searchValues" SizeDefinition="Middle" Header="Search History">
                        <Fluent:DropDownButton.Icon>
                            <Grid Width="12" Height="12">
                                <Image Source="Images\Find.png"/>
                            </Grid>
                        </Fluent:DropDownButton.Icon>

                        <Fluent:Gallery MaxItemsInRow="1" MinItemsInRow="1" ItemWidth="100"
                                        SelectedItem="{Binding Mode=TwoWay, Path=SelectedCriteria}"
                                        ItemsSource="{Binding AppSettings.SearchValues}"/>
                        <Fluent:MenuItem Header="Clear History" Command="{Binding ClearSearchHistoryCommand}" Icon="Images\clear.png"/>
                    </Fluent:DropDownButton>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Settings">
                    <Fluent:DropDownButton Name="rowCount" SizeDefinition="Middle" Header="Max Rows">
                        <Fluent:DropDownButton.Icon>
                            <Grid Width="16" Height="16">
                                <Image Source="Images\counter.png"/>
                            </Grid>
                        </Fluent:DropDownButton.Icon>

                        <Fluent:Gallery MaxItemsInRow="1" MinItemsInRow="1" ItemWidth="100"
                                        SelectedItem="{Binding Mode=TwoWay, Path=MaxRowCount}" SelectedValue="{Binding Mode=TwoWay, Path=MaxRowCount}"
                                        ItemsSource="{Binding MaxRows}"/>
                    </Fluent:DropDownButton>

                    <Fluent:DropDownButton Name="copyMode" SizeDefinition="Middle" Header="Copy Mode">
                        <Fluent:DropDownButton.Icon>
                            <Grid Width="16" Height="16">
                                <Image Source="Images\Copy.png"/>
                            </Grid>
                        </Fluent:DropDownButton.Icon>

                        <Fluent:Gallery MaxItemsInRow="1" MinItemsInRow="1" ItemWidth="100"
                                        SelectedItem="{Binding Mode=TwoWay, Path=CopyMode}" SelectedValue="{Binding Mode=TwoWay, Path=CopyMode}"
                                        ItemsSource="{Binding CopyModes}"/>
                    </Fluent:DropDownButton>

                    <Fluent:DropDownButton Name="selectionMode" SizeDefinition="Middle" Header="Selection Mode">
                        <Fluent:DropDownButton.Icon>
                            <Grid Width="16" Height="16">
                                <Image Source="Images\List.png"/>
                            </Grid>
                        </Fluent:DropDownButton.Icon>

                        <Fluent:Gallery MaxItemsInRow="1" MinItemsInRow="1" ItemWidth="100"
                                        SelectedItem="{Binding Mode=TwoWay, Path=SelectionMode}" SelectedValue="{Binding Mode=TwoWay, Path=SelectionMode}"
                                        ItemsSource="{Binding SelectionModes}"/>
                    </Fluent:DropDownButton>

                    <Fluent:CheckBox Header="Use Constraints" Visibility="Collapsed" IsChecked="{Binding Mode=TwoWay, Path=UseSchemaConstraints}"/>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Export">
                    <Fluent:Button Header="Html" Command="{Binding Export2HtmlCommand}" Icon="Images\html.png" LargeIcon="Images\html.png"/>
                    <Fluent:Button Header="SQL" Command="{Binding Export2SqlInsertCommand}" Icon="Images\sql.png" LargeIcon="Images\sql.png"/>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Errors" Visibility="{Binding LastErrorsVisibility}" HorizontalAlignment="Right">
                    <Fluent:DropDownButton Name="lastErrors" SizeDefinition="Middle" Header="Found Errors">
                        <Fluent:DropDownButton.Icon>
                            <Grid Width="12" Height="12">
                                <Image Source="Images\Alert.png"/>
                            </Grid>
                        </Fluent:DropDownButton.Icon>

                        <Fluent:Gallery MaxItemsInRow="1" MinItemsInRow="1" ItemWidth="200"
                                        ItemsSource="{Binding Mode=OneWay, Path=LastErrors}"/>
                        <Fluent:MenuItem Header="Clear" Command="{Binding ClearLastErrorsCommand}" Icon="Images\clear.png"/>
                    </Fluent:DropDownButton>
                </Fluent:RibbonGroupBox>

                <Fluent:RibbonGroupBox Header="Wait" Visibility="{Binding SprocketVisibility}" HorizontalAlignment="Right">
                    <Border Padding="1" CornerRadius="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="1">
                        <Border.Background>
                            <SolidColorBrush Color="Black"/>
                        </Border.Background>
                        <StackPanel>
                            <wpfspark:SprocketControl 
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top"
                                  TickColor="Orange"
                                  Width="40"
                                  Height="40"
                                  TickWidth="3"
                                  TickCount="40"
                                  StartAngle="-90"
                                  IsIndeterminate="{Binding IsBusy}"
                                  Interval="30" />
                            <wpfspark:FluidStatusBar 
                                 x:Name="customStatusBar"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 FadeOutDirection="Down"
                                 FadeOutDistance="400"
                                 FadeOutDuration="00:00:00.75"
                                 MoveDuration="00:00:00.3"
                                 Foreground="Orange"
                                 Background="Transparent"
                                 FontFamily="Segoe WP"
                                 FontWeight="Light"
                                 FontStyle="Italic"
                                 FontSize="10"/>
                        </StackPanel>
                    </Border>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>

            <!--Backstage Items-->
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage>
                    <Fluent:BackstageTabControl>
                        <Fluent:Button Header="Close" Command="{Binding ExitCommand}" Icon="Images\Exit.png"/>
                    </Fluent:BackstageTabControl>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>
        </Fluent:Ribbon>

        <TabControl>
            <TabItem Visibility="{Binding DatasetsVisibility}" 
                     IsSelected="{Binding Mode=OneWay, Path=IsDatasetsViewSelected}">
                <!--View Current dataset table Details-->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="3"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>
                    <Border Padding="4" CornerRadius="2"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="DarkGray" BorderThickness="1">
                        <DockPanel LastChildFill="True">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding SelectedDataTable.Root.Table.TableName}" FontWeight="DemiBold" VerticalAlignment="Center"/>
                                <TextBlock Text=" - " Foreground="Green" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SelectedDataTable.Root.Table.Count}" Foreground="Green" VerticalAlignment="Center"/>
                                <TextBlock Text=" Rows" Foreground="Green" VerticalAlignment="Center"/>
                                <Fluent:Button Height="32" Width="32"
                            VerticalAlignment="Center"
                            Click="AddTableRelation_Click"
                            Visibility="{Binding SelectedDataTable.Root.ConfigTable, Converter={StaticResource TableConverter}}"
                            Tag="{Binding SelectedDataTable}"       
                            Icon="Images\connect.png" 
                            LargeIcon="Images\connect.png" 
                            Style="{DynamicResource FluentButtonStyle}"/>
                            </StackPanel>
                            <DataGrid ItemsSource="{Binding SelectedDataTable.Root.Table}"
                          CanUserResizeRows="False" 
                          AlternatingRowBackground="LemonChiffon" 
                          ClipboardCopyMode="{Binding CopyMode}"                                      
                          SelectionMode="{Binding SelectionMode}" 
                          IsReadOnly="True" 
                          IsTextSearchEnabled="True"
                          AutoGenerateColumns="True"
                          CurrentCellChanged="DataGrid_CurrentCellChanged"
                          SelectedItem="{Binding SelectedRootDataRowView}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"/>
                        </DockPanel>
                    </Border>

                    <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="Gray" BorderThickness="1"
                          Style="{DynamicResource GridSplitterStyle}" Background="LightBlue"/>

                    <Border Grid.Column="2" 
                    Padding="4" CornerRadius="2"  
                    VerticalAlignment="Stretch" 
                    HorizontalAlignment="Stretch" 
                    BorderBrush="DarkGray" 
                    BorderThickness="1">
                        <ListBox ItemsSource="{Binding SelectedDataTable.Children}" 
                         SelectionMode="Single"
                         VerticalAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="OuterBackgroundBorder"
                                    VerticalAlignment="Stretch"
                                    BorderThickness="1" 
                                    Margin="0,10,0,0">
                                        <Border.BorderBrush>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0" Color="#9CA0A3"/>
                                                <GradientStop Offset="1" Color="#7F8384"/>
                                            </LinearGradientBrush>
                                        </Border.BorderBrush>
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0" Color="#FFFBFF"/>
                                                <GradientStop Offset="0.5" Color="#FDFFFE"/>
                                                <GradientStop Offset="0.5" Color="#F3F4F6"/>
                                                <GradientStop Offset="1" Color="#D1D6DC"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border x:Name="InnerBackgroundBorder" 
                                        BorderThickness="1"
                                        VerticalAlignment="Stretch">
                                            <Border.BorderBrush>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Offset="0" Color="#80EBEFF0"/>
                                                    <GradientStop Offset="1" Color="#60889ca3"/>
                                                </LinearGradientBrush>
                                            </Border.BorderBrush>
                                            <Grid VerticalAlignment="Stretch"
                                          HorizontalAlignment="Stretch">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                                    <Fluent:Button Height="32" Width="32"
                                                           VerticalAlignment="Center"
                                                           Click="btnDrillDown_Click"
                                                           Visibility="{Binding Root.ConfigTable.Children.Count, Converter={StaticResource IntConverter}}"
                                                           Tag="{Binding}"       
                                                           Icon="Images\tables-relation.png" 
                                                           LargeIcon="Images\tables-relation.png"/>
                                                    <TextBlock Text="{Binding Root.Table.TableName}" Foreground="Black" FontWeight="DemiBold" VerticalAlignment="Center"/>
                                                    <TextBlock Text=" - " Foreground="Green" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Root.Table.Count}" Foreground="Green" VerticalAlignment="Center"/>
                                                    <TextBlock Text=" Rows" Foreground="Green" VerticalAlignment="Center"/>
                                                    <Fluent:Button Height="32" Width="32"
                                                           VerticalAlignment="Center"
                                                           Click="AddTableRelation_Click"
                                                           Visibility="{Binding Root.ConfigTable, Converter={StaticResource TableConverter}}"
                                                           Tag="{Binding}"       
                                                           Icon="Images\connect.png" 
                                                           LargeIcon="Images\connect.png"
                                                           Style="{DynamicResource FluentButtonStyle}"/>
                                                </StackPanel>
                                                <DataGrid Grid.Row="1" 
                                                    ItemsSource="{Binding Root.Table}"
                                                    AutoGenerateColumns="True"
                                                    IsReadOnly="True"
                                                    SelectionMode="{Binding SelectionMode}"
                                                    AlternatingRowBackground="LightCyan" 
                                                    CanUserAddRows="False" 
                                                    CanUserDeleteRows="False" 
                                                    CanUserResizeRows="False" 
                                                    ClipboardCopyMode="{Binding CopyMode}" 
                                                    IsTextSearchEnabled="True" 
                                                    SelectionUnit="CellOrRowHeader"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                  MinHeight="50"  
                                                  MaxHeight="400"/>
                                            </Grid>
                                        </Border>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Visibility="{Binding TablesVisibility}" 
                     IsSelected="{Binding Mode=OneWay, Path=IsTablesViewSelected}">
                <!--View Current table Details-->
                <Grid>
                    <Border Padding="4" CornerRadius="2"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="DarkGray" BorderThickness="1">
                        <DockPanel LastChildFill="True">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding SelectedRootTable.Root.Table.TableName}" FontWeight="DemiBold" VerticalAlignment="Center"/>
                                <TextBlock Text=" - " Foreground="Green" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SelectedRootTable.Root.Table.Count}" Foreground="Green" VerticalAlignment="Center"/>
                                <TextBlock Text=" Rows" Foreground="Green" VerticalAlignment="Center"/>
                            </StackPanel>
                            <DataGrid ItemsSource="{Binding SelectedRootTable.Root.Table}"
                          CanUserResizeRows="False" 
                          SelectionMode="{Binding SelectionMode}" 
                          CurrentCellChanged="DataGrid_CurrentCellChanged"
                          SelectedItem="{Binding SelectedRootDataRowView}"
                          AlternatingRowBackground="LemonChiffon" 
                          ClipboardCopyMode="{Binding CopyMode}" 
                          IsReadOnly="True" 
                          IsTextSearchEnabled="True"
                          AutoGenerateColumns="True"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"/>
                        </DockPanel>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Visibility="{Binding QueriesVisibility}" 
                     IsSelected="{Binding Mode=OneWay, Path=IsQueriesViewSelected}">
                <!--View Current query table Details-->
                <Grid>
                    <Border Padding="4" CornerRadius="2"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderBrush="DarkGray" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                <TextBlock Text="{Binding SelectedRootTable.Root.Table.TableName}" FontWeight="DemiBold" VerticalAlignment="Center"/>
                                <TextBlock Text=" - " Foreground="Green" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SelectedRootTable.Root.Table.Count}" Foreground="Green" VerticalAlignment="Center"/>
                                <TextBlock Text=" Rows" Foreground="Green" VerticalAlignment="Center"/>
                                <HeaderedItemsControl Grid.Row="1" ItemsSource="{Binding SelectedQuery.Parameter}"
                                        Height="25"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding SelectedQuery.Paramter.Count, Converter={StaticResource IntConverter}}" Background="Transparent">
                                    <HeaderedItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel IsItemsHost="True" Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </HeaderedItemsControl.ItemsPanel>
                                    <HeaderedItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding name}" Margin="8,0,0,0" FontWeight="DemiBold" Foreground="Gray" VerticalAlignment="Center"/>
                                                <TextBox Grid.Column="1" Margin="4,0,0,0" Text="{Binding Mode=TwoWay, Path=defaultValue, UpdateSourceTrigger=PropertyChanged}" Foreground="Orange" Width="100" VerticalAlignment="Center"/>
                                            </Grid>
                                        </DataTemplate>
                                    </HeaderedItemsControl.ItemTemplate>
                                </HeaderedItemsControl>
                                <Button Command="{Binding RefreshCommand}" CommandParameter="1" VerticalAlignment="Center">
                                    <Button.RenderTransform>
                                        <SkewTransform />
                                    </Button.RenderTransform>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="#FF262626"/>
                                            <Setter Property="Foreground" Value="#FFFFFFFF"/>
                                            <Setter Property="Height" Value="24"/>
                                            <Setter Property="Width" Value="24"/>
                                            <Setter Property="Margin" Value="4,0,0,0"/>
                                            <Setter Property="Padding" Value="3"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Opacity" Value="0.995"/>
                                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                                            <Setter Property="BorderBrush">
                                                <Setter.Value>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FFA3AEB9" Offset="0"/>
                                                        <GradientStop Color="#FF8399A9" Offset="0.375"/>
                                                        <GradientStop Color="#FF718597" Offset="0.375"/>
                                                        <GradientStop Color="#FF617584" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Grid>
                                                            <VisualStateManager.VisualStateGroups>
                                                                <VisualStateGroup x:Name="CommonStates">
                                                                    <VisualState x:Name="Normal"/>
                                                                    <VisualState x:Name="MouseOver">
                                                                        <Storyboard>
                                                                            <ColorAnimation Duration="0" To="#FF4472A2" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)" Storyboard.TargetName="path" />
                                                                        </Storyboard>
                                                                    </VisualState>
                                                                    <VisualState x:Name="Pressed"/>
                                                                    <VisualState x:Name="Disabled"/>
                                                                </VisualStateGroup>
                                                                <VisualStateGroup x:Name="FocusStates">
                                                                    <VisualState x:Name="Focused"/>
                                                                    <VisualState x:Name="Unfocused"/>
                                                                </VisualStateGroup>
                                                            </VisualStateManager.VisualStateGroups>
