<Window x:Class="RelatedRecords.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RelatedRecords.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="{Binding SelectedDataTable.Root.Table.TableName}"
                   HorizontalAlignment="Center"/>
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding SelectedDataTable.Root.Table}"
                  AutoGenerateColumns="True"
                  AlternatingRowBackground="Beige"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  SelectedItem="{Binding SelectedRootDataRowView}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"/>
        
        <HeaderedItemsControl Grid.RowSpan="2"
                              Grid.Column="1"
                              Header="Children Tables"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              ItemsSource="{Binding SelectedDataTable.Children}">
            <HeaderedItemsControl.ItemTemplate>                
                <DataTemplate>
                    <Grid Margin="0,8,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="Children" 
                                Tag="{Binding}"
                                Margin="2,0,0,0">
                        </Button>
                        <TextBlock Grid.Column="2" 
                            Text="{Binding Table.TableName}"
                            Margin="4,0,0,0"/>
                        
                        <DataGrid Grid.Row="1" Grid.ColumnSpan="2"
                                  ItemsSource="{Binding Table}"
                                  AutoGenerateColumns="True"
                                  AlternatingRowBackground="LightSeaGreen"
                                  IsReadOnly="True"
                                  SelectionMode="Single"
                                  SelectionUnit="FullRow"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"/>
                    </Grid>
                </DataTemplate>                    
            </HeaderedItemsControl.ItemTemplate>                     
        </HeaderedItemsControl>
    </Grid>
</Window>
